<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="layout.serversFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/serverDataLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tvServerData1"
            style="@style/txtViewServerData_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/no_server_found" />

        <TextView
            android:id="@+id/tvServerData2"
            style="@style/txtViewServerData_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/no_server_found" />

        <TextView
            android:id="@+id/tvServerData3"
            style="@style/txtViewServerData_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/no_server_found" />

        <TextView
            android:id="@+id/tvServerData4"
            style="@style/txtViewServerData_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/no_server_found" />

        <Button
            android:id="@+id/btnRefreshServers"
            style="@style/btn_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/refresh_server_info" />

    </LinearLayout>


</FrameLayout>
